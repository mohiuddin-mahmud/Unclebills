@model IList<Nop.Web.Models.Catalog.CategorySimpleModel>
@using Nop.Core.Domain.Catalog
@using Nop.Web.Framework.Mvc.Routing
@{
    if (Model.Count() > 0)
    {        
        var selectedText = TempData["selectedText"];
        <div class="sub-categories common-container">
            <div class="category-filter-name" data-label="label">@selectedText</div>

            <div class="dropdown-categories">
                @foreach (var category in Model)
                {
                    <div class="options" data-subcat="@TempData["subcat"]" data-href="@(Url.RouteUrl<Category>(new { SeName = category.SeName }))" data-id="@category.Id">@category.Name</div>
                }
            </div>

        </div>
    }
}