@model IList<NopValley.Plugins.Misc.Models.HtmlWidgetPublicModel>
@using Nop.Core.Domain.Catalog
@using Nop.Web.Framework.Mvc.Routing
@{
    if (Model.Count() > 0)
    {
        <div class="guest-banner-container">

            <div class="home-page-guestbanner-grid">
                <div class="item-grid">
                    @foreach (var category in Model)
                    {
                        <div class="item-box" onclick=gotoLink("@category.Link")>
                            <div>
                                <img alt="@category.PictureModel.AlternateText" src="@category.PictureModel.ImageUrl" title="@category.Title" />
                            </div>
                            <div class="htmlwidget-details">
                                <div class="htmlwidget-title">
                                    @category.Title
                                </div>
                                <div class="htmlwidget-body">
                                    @Html.Raw(@category.Description)
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>

        </div>
    }

}

<style>

    .guestBanner-wrapper {
        display: flex;
        background: #f9f9f9;
        width: 100%;
    }

    .home-page-guestbanner-grid .item-box {
        border: 2px solid #f9f9f9;
        border-radius:5px;
        cursor:pointer;
    }

    .guest-banner-container .title {
        font-size: 42px;
        font-weight: 900;
        color: #181d20;
        margin-bottom: 20px;
    }

    .guest-banner-container {
        max-width: 1198px;
        margin: 30px auto 30px;
        width: 100%;
    }

        .guest-banner-container .item-box div img {
            max-width: 100%;
            max-height: 100%;
            border-top-right-radius: 5px;
            border-top-left-radius: 5px;
        }

    .home-page-guestbanner-grid .item-box > div:first-child {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 15px 0 0;
    }

    .htmlwidget-details {
        padding: 0 15px 20px;
        background: #fff;
        border-top: 0;
        text-align:center;
    }

    .htmlwidget-title {
        font-size: 18px;
        font-weight: 900;
        color: #181d20;
        padding: 20px 0;
    }

    .htmlwidget-body {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        color: #181d20;
        line-height: 20px;
    }

    .htmlwidget-body p{
        font-size: 14px;
        font-weight: 400;
    }
</style>