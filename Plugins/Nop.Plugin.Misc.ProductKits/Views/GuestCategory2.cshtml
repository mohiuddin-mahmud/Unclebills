@model IList<NopValley.Plugins.Misc.Models.HtmlWidgetPublicModel>
@using Nop.Core.Domain.Catalog
@using Nop.Web.Framework.Mvc.Routing
@{
    if (Model.Count() > 0)
    {
        <div class="guestBanner-wrapper">
            <div class="guestcategory2-container">
                <div class="title">
                    @T("HIZMET.ALANLARI")
                </div>
                <div class="home-page-guestcategory2-grid">
                    <div class="item-grid guestcategory2-slider">
                        @foreach (var category in Model)
                        {
                            <div class="item-box" onclick=gotoLink("@category.Link")>
                                <div>
                                    <img alt="@category.PictureModel.AlternateText" src="@category.PictureModel.ImageUrl" title="@category.Title" />
                                </div>
                                <div class="category-details">
                                    <div class="category-title">
                                        @category.Title
                                    </div>
                                    <div class="category-body">
                                        @Html.Raw(@category.Description)
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    }
}

<style>

    .guestBanner-wrapper {
        display: flex;
        background: #f9f9f9;
        width: 100%;
    }

    .guestBanner-wrapper .item-box{
        cursor:pointer;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    height: 400px;
    }

    .guestcategory2-container .title {
        font-size: 42px;
        font-weight: 900;
        color: #181d20;
        margin-bottom: 20px;
        text-transform: uppercase;
    }

    /* .guestcategory2-container .item-box div {
            display: flex;
        }*/

    .guestcategory2-container .item-box div img {
        max-width: 100%;
        max-height: 100%;
        border-top-right-radius: 5px;
        border-top-left-radius: 5px;
    }

    .guestcategory2-container {
        max-width: 1198px;
        margin: 30px auto 30px;
        width: 100%;
    }

    .category-details {
        border: 2px solid #f9f9f9;
        padding: 0 15px 20px;
        background: #fff;
        border-top: 0px;
    }

    .category-title {
        font-size: 18px;
        font-weight: 900;
        color: #181d20;
        padding: 20px 0;
        font-family: 'Poppins', sans-serif;
    }

    .category-body {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        color: #181d20;
        line-height: 20px;
    }

    .category-body p {
        font-size:14px;
        font-weight:400;
    }
</style>

