@using NopValley.Plugins.Misc.Domain
@model NopValley.Plugins.Misc.Areas.Admin.Models.ServicePostCategoryModel
@{
    //page title
    ViewBag.PageTitle = T(ResourceNames.SERVICEPOSTCATEGORY_EDIT).Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Service post category");
}

<form asp-controller="ServicePostCategory" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T(ResourceNames.SERVICEPOSTCATEGORY_EDIT) - @Model.Name
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Categories">@T(ResourceNames.SERVICEPOSTCATEGORY_BACKTOLIST)</a>
            </small>
        </h1>
        <div class="float-right">
            
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="blogpost-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
            
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/NopValley.Misc/Areas/Admin/Views/ServicePostCategory/_CreateOrUpdate.cshtml", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="blogpost-delete" />