@model NopValley.Plugins.Misc.Areas.Admin.Models.ServicePost.ServicePostModel

@{
    //resources for product tags input
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-tageditor/jquery.tag-editor.css");
    NopHtml.AppendScriptParts(ResourceLocation.Footer, "~/lib_npm/jquery-tageditor/jquery.tag-editor.min.js");
    NopHtml.AppendScriptParts(ResourceLocation.Footer, "~/lib_npm/jquery-tageditor/jquery.caret.min.js");
}


<div class="card-body">
    @(await Html.LocalizedEditorAsync<ServicePostModel, ServicePostLocalizedModel>("servicepost-name-localized",
    @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="@Model.Locales[item].Name" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="@Model.Locales[item].Name" />
                <span asp-validation-for="@Model.Locales[item].Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="@Model.Locales[item].Body" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="@Model.Locales[item].Body" asp-template="RichEditor" />
                <span asp-validation-for="@Model.Locales[item].Body"></span>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
    </div>
        ,
    @<div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="Name" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="Name" asp-required="true" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="Body" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="Body" asp-template="RichEditor" />
                <span asp-validation-for="Body"></span>
            </div>
        </div>
    </div>))
    
    <div class="form-group advanced-setting row">
        <div class="col-md-3">
            <nop-label asp-for="PictureId" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PictureId" />
            <span asp-validation-for="PictureId"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="CategoryId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="CategoryId" asp-items="Model.AvailableCategories" />
            <span asp-validation-for="CategoryId"></span>
        </div>
    </div>
</div>


